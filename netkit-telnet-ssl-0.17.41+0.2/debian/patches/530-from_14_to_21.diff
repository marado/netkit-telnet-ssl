+/* code from Peter 'Luna' Runestig <peter@runestig.com> */
+static int select_read(int rfd)
+/* timeout = 20 seconds */
+{
+    fd_set rfds;
+    struct timeval tv;
+
+    FD_ZERO(&rfds);
+    FD_SET(rfd, &rfds);
+    tv.tv_sec = 20;
+    tv.tv_usec = 0;
+    return select(rfd + 1, &rfds, NULL, NULL, &tv);
+}
